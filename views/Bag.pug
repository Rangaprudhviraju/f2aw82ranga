extends layout

block content
  h1= title
   - var results = [{"Bag_Name": "Nike", "Bag_Company": "Nike", "Bag_Size": 4.0, "Bag_Rating": 4.7},{"Bag_Name": "Kors", "Bag_Company": "Michael", "Bag_Size": 10.0, "Bag_Rating": 4.2},{"Bag_Name": "Adidas", "Bag_Company": "Adidas", "Bag_Size": 11.0, "Bag_Rating": 4.6}]
        div(class="container-fluid") 
            div(class="row") 
                each item, index in results
                    div(class="col-sm-2")(onclick=`buy(${index})`) Bag Name: #{item["Bag_Name"]} <br> Bag Company: #{item["Bag_Company"]} <br> Bag Size: #{item["Bag_Size"]} <br> Bag Rating: #{item["Bag_Rating"]}
            script.
                function buy(index) {
                    alert("You purchased item " + index)
                }

 